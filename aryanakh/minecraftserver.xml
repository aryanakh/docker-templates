<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/aryanakh/docker-templates/master/aryanakh/minecraftserver.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>GameServers:</Category>
  <Name>minecraftserver</Name>
  <Description>
    [b][u][span style='color: #E87000;']Description[/span][/u][/b][br]
   This docker allows you to run a minecraft server inside of a docker container. It allows for modded servers with custom server JARs as well as vanilla.[br][br]
    [b][u][span style='color: #E87000;']Configuration[/span][/u][/b][br]
    [b]/config[/b] This is where Minecraft will store it's configuration file, database and logs.[br][br]
  </Description>
  <Overview>
   This docker allows you to run a minecraft server inside of a docker container. It is a fork of Binhex's Minecraft Basic Server to allow for modded servers with custom server JARs.
  </Overview>
  <Registry>https://registry.hub.docker.com/r/aryanakh/minecraftserver/</Registry>
  <GitHub>https://github.com/aryankh/minecraftserver</GitHub>
  <Repository>aryanakh/minecraftserver</Repository>
  <Project>https://www.minecraft.net/en-us/download/server/</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>25565</HostPort>
        <ContainerPort>25565</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>8222</HostPort>
        <ContainerPort>8222</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>SERVER_TYPE</Name>
      <Value>mojang</Value>
    </Variable>
    <Variable>
      <Name>SERVER_JAR</Name>
      <Value>minecraft_server.jar</Value>
    </Variable>
    <Variable>
      <Name>CREATE_BACKUP_HOURS</Name>
      <Value>12</Value>
    </Variable>
    <Variable>
      <Name>PURGE_BACKUP_DAYS</Name>
      <Value>14</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_WEBUI_CONSOLE</Name>
      <Value>yes</Value>
    </Variable>
    <Variable>
      <Name>ENABLE_WEBUI_AUTH</Name>
      <Value>yes</Value>
    </Variable>
    <Variable>
      <Name>WEBUI_USER</Name>
      <Value>admin</Value>
    </Variable>
    <Variable>
      <Name>WEBUI_PASS</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>WEBUI_CONSOLE_TITLE</Name>
      <Value>Minecraft Java</Value>
    </Variable>
    <Variable>
      <Name>JAVA_MIN_HEAP_SIZE</Name>
      <Value>1024M</Value>
    </Variable>
    <Variable>
      <Name>JAVA_MAX_HEAP_SIZE</Name>
      <Value>1024M</Value>
    </Variable>
    <Variable>
      <Name>JAVA_MAX_THREADS</Name>
      <Value>1</Value>
    </Variable>
    <Variable>
      <Name>UMASK</Name>
      <Value>000</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Banner></Banner>
  <WebUI>http://[IP]:[PORT:8222]/</WebUI>
  <Icon>https://raw.githubusercontent.com/aryanakh/docker-templates/master/aryanakh/images/minecraftserver-icon.png</Icon>
  <DonateText>If you like my work, consider helping me justify the electrcity bill by leaving a tip <3</DonateText>
  <DonateLink>https://www.paypal.com/donate?hosted_button_id=2JW2PEKRS7UXW</DonateLink>
  <DonateImg>https://www.paypal.com/en_US/i/btn/btn_donate_SM.gif</DonateImg>
  <ExtraParams></ExtraParams>
</Containers>
